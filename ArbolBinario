NodoArbol raiz;
    
   public ArbolBinario() {
        this.raiz = null;
    }
   //Metodo para insertar un nuevo Nodo en el Arbol
   public void agregarNodo(int d, String nom){
       NodoArbol nuevo = new NodoArbol(d, nom);
       if(raiz==null){
           raiz= nuevo;
       }
       else{
           NodoArbol auxiliar= raiz;
           NodoArbol padre;
           while(true){
               padre=auxiliar;
               if(d<auxiliar.dato){
                   auxiliar= auxiliar.hijoizq;
                   if(auxiliar==null){
                       padre.hijoizq=nuevo;
                       return;
                   }
               }
               else{
                   auxiliar= auxiliar.hijoderecho;
                   if(auxiliar==null){
                       padre.hijoderecho=nuevo;
                       return;
                   }
               }
           }
       }
